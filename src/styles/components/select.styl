.itgreen-select
  display inline-block
  box-sizing border-box
  height 41px
  width 345px
  border 1px solid #d1d1d1
  position relative
  cursor pointer
  border-radius(3px)

  &::after
    content ''
    position absolute
    right 0
    top 0
    bottom 0
    width 31px
    border-radius(3px)
    background white url('../img/arrowdropdown.png') no-repeat 6px center
    pointer-events none

  &.width-full
    width 100%

select
  cursor pointer
  background transparent
  border none
  font-size 14px
  height 29px
  padding 5px
  width 100%
  height 100%
  vertical-align top
