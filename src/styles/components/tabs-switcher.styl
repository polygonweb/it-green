.tabs-switcher
  border-bottom 1px solid #f0f0f0
  margin-bottom 18px

  .tab
    display inline-block
    position relative
    background white
    cursor pointer

    $pad = 13px
    $height = 37px

    span
      display inline-block
      padding-left $pad
      padding-right $pad
      height $height
      line-height $height
      text-align center
      text-decoration underline
      color #4d7abe

    &.selected
      top 1px
      border 1px solid #f0f0f0
      border-bottom transparent

      span
        color black
        text-decoration none
        border-top 3px solid #a0ca53
