.b-toolbar
  position relative
  box-shadow 0 0 5px rgba(0, 0, 0, 0.18)
  border-radius 3px

  &__item
    position relative
    font-size 12px
    // background #fff

    &_wide
      min-width 117px

  &__btn
    position relative
    z-index 1
    margin -1px 0 0 -1px
    overflow hidden
    box-sizing border-box
    width calc(100% + 1px)
    min-width 37px
    line-height 37px
    // padding 13px 10px 12px
    padding 0 10px
    border 1px solid #f0f0f0
    text-align left
    border-radius inherit
    cursor pointer
    background #fff
    transition background .2s

    &:hover
    &_active
      background: #f9f9f9

    &:focus
      z-index 2
      outline 0

    &:not(:only-child)
      padding-right 32px

      &::after
        content ""
        position absolute
        top 0
        bottom 0
        right 10px
        margin auto
        width 0
        height 0
        border 5px solid transparent
        border-top-color #d1d1d1
        border-bottom 0

  &_pos_horiz
    font-size 0

  &_pos_horiz &__item
    display inline-block
    vertical-align middle

    &:first-child
      border-top-left-radius    inherit
      border-bottom-left-radius inherit

     &:last-child
      border-top-right-radius    inherit
      border-bottom-right-radius inherit

  &_pos_vert &__item
    &:first-child
      border-top-left-radius  inherit
      border-top-right-radius inherit

     &:last-child
      border-bottom-left-radius  inherit
      border-bottom-right-radius inherit

  &__icon
    position relative
    top -2px
    vertical-align middle

  &__block-btn
    $btn-size = 65px
    width $btn-size
    height $btn-size
    line-height 1
    text-align center

  &__block-icon
    position relative
    left 2px
    width 37px
    height 32px

  &__block-text
    color siteDarkBlue

  &__color
    padding 2px
    background currentColor
    background-clip content-box

  &__dropdown
    display none
    position absolute
    top 100%
    left -1px
    margin-top -1px
    box-sizing border-box
    min-width calc(100% + 1px)
    max-height 420px
    overflow auto
    border 1px solid #f0f0f0
    border-bottom-left-radius  3px
    border-bottom-right-radius 3px
    background #fff

  &__range
    height 143px
    padding 9px 0

  &__cliparts
    width 424px

  &__item_open &__btn
    border-bottom-color transparent

  &__item_open &__dropdown
    display block

