.msg-table
  // display table-cell
  display table
  border-collapse collapse
  width 100%

  .msg-table-row
    display table-row
    border-top 1px solid #f0f0f0
    color inherit
    text-decoration none

    &:hover
      background-color #fafff1
      cursor pointer

    .msg-reciever,
    .msg-text,
    .msg-date,
    .msg-meta
      display table-cell
      padding-top 20px
      padding-bottom 20px
      vertical-align middle

    .msg-reciever,
    .msg-text
      font-size 12px
      color black

    .msg-reciever
      width 177px
      padding-left 20px

    .msg-text
      width 514px
      padding-left 12px
      vertical-align top
      line-height: 1.5

    .msg-date
    .msg-meta
      padding-left 20px
      width 108px
      font-size 11px
      color #818181

      &:last-child
        padding-right 20px

    .msg-date
      white-space nowrap

    .msg-meta
      line-height 1.5

    &:last-child
      border-bottom 1px solid #f0f0f0

+mq(main)
  .msg-table
    .msg-table-row
      .msg-reciever,
      .msg-text,
      .msg-date,
      .msg-meta
        display block !important
        width 90% !important
        padding-left 5% !important
        padding-right 5% !important
