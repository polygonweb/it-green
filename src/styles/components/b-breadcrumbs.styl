.b-breadcrumbs
  $this = selector()
  margin 0
  padding 0
  list-style none
  overflow hidden
  font-size 12px
  color #a5a5a5

  &__link
    color inherit

    &:hover
      text-decoration none

  &__item
    padding-bottom 12px
    position relative
    float left

    &::after
      content ""
      margin 0 7px 0 3px
      display inline-block
      vertical-align middle
      transform rotate(-45deg)
      width  3px
      height 3px
      border 1px solid
      border-width 0 1px 1px 0

    &:last-child

      &::after
        content ""
        position absolute
        top 0
        left 0
        margin 0
        transform none
        width 100%
        height 100%
        border 0

      {$this}__link
        text-decoration none

