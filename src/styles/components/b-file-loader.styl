.b-file-loader
  $this = selector()
  position relative
  display inline-table
  table-layout fixed

  &__input
    position absolute
    top 0
    left 0
    opacity 0
    width 100%
    height 100%
    cursor pointer

  &__trigger
    display block
    padding-left 30px
    min-height 30px
    background url("../img/addfile.png") no-repeat 0 0
    cursor pointer

  &__trigger-text
    display block
    padding-top 3px
    line-height 1.2
    color siteDarkBlue
    background linear-gradient(90deg, currentColor 3px, transparent 0) repeat-x 0 100%
    background-size: 6px 1px

  &__trigger:hover &__trigger-text {
    background 0
  }

  &__preview
    display none
    position relative
    min-height 57px
    padding-left 51px
    background none no-repeat 0 0

    &_type_jpg
      background-image url("../img/file-jpeg.png")

    // ...

  &__name
    padding 6px 0 2px

  &__meta
    margin-bottom 5px
    font-size 12px
    color siteTextGray2

  &__del
    vertical-align top
    border 0
    padding 0
    font-size 12px
    color #e05656
    text-decoration underline
    background 0
    cursor pointer

    &::before
      content ""
      margin-right 2px
      display inline-block
      vertical-align middle
      width 9px
      height 10px
      background url("../img/delete.png") no-repeat 0 0

    &:hover
      text-decoration none

  &_active
    {$this}__preview
      display block

    {$this}__trigger
      display none

