.lk-menu
  display: inline-block
  background-color white
  // box-shadow: 1px 1px 8px rgba(0,0,0,0.7)
  margin-top 20px
  margin-bottom 30px
  margin-right 17px
  vertical-align top
  // border-radius(5px)
  li
    display block
    width 258px
    background-repeat no-repeat
    background-position 18px center

    &.lk-group-title
      margin-top 16px
      padding-left 13px
      font-family LatoBold
      font-size 1em
      color #555555
      height 30px
      line-height 30px
      box-sizing border-box
    &.lk-button
      a
        display block
        height 44px
        line-height 44px
        font-family Lato
        font-size 1em
        color #4d7abe
        padding-left 48px
        text-decoration none
      &.lk-button-selected
        border-left 3px solid #a7ce5f
        background-color #e6f1d2

