// [1] - для устранения зазоров между колонками
.itgreen-table
  margin-right 8px
  margin-top 20px
  display table
  border-collapse collapse
  font-size 0 // [1]
  width 100%

  .title-cell:nth-child(1)
  .itgreen-cell:nth-child(1)
    padding-left 20px

  .title-row
    display none

    &:first-child
      display table-row

    .title-cell
      display table-cell
      background #f0f0f0
      font-size 14px
      color #818181
      padding-top 12px
      padding-bottom 12px

  .itgreen-table-row
    display table-row
    border-bottom 1px solid #ccc

    .itgreen-cell
      display table-cell
      font-size 12px
      padding-top 20px
      padding-bottom 20px

  .order-number
    font-size 12px
    color #4d7abe

  .order-date
    display block
    font-size 12px
    margin-top 4px

  .download
    display block
    width 25px
    height 25px
    padding-left 5px
    background url('../img/dwnld.png') no-repeat center

+mq(main)
  .itgreen-table
    display block
    .title-row
      display inline-block
      vertical-align top
      width 21%
      padding-left 4%
      padding-right 4%
      background-color #f0f0f0

      &:first-child
        display inline-block

      .title-cell
        display block
        padding-top 20px
        padding-bottom 20px
        height 48px
        width auto !important

        &:nth-child(1)
          padding-left 0px

    .itgreen-table-row
        display inline-block
        vertical-align top
        width 69%

        .itgreen-cell
          display block
          padding-top 20px
          padding-bottom 20px
          height 48px
          width auto !important
          padding-left 10px

