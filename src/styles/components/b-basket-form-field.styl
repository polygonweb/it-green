.b-basket-form-field
  display table
  border-collapse collapse
  width 100%

  &__cell
    display table-cell
    vertical-align middle

    &:last-child
      padding-left 3px
      width 1px

  &__control
    box-sizing border-box
    padding-left 10px
    padding-right 10px
    max-width 100%
    height 40px
    line-height normal
    font-size 14px


